<h1>New Song</h1>
<%= form_for @song do |f| %>

  <% if @song.errors.any? %>
    <div id="error_explanation">
      <h2>There were some errors:</h2>
          <ul>
        <%=@song.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <%end%>
          </ul>
    </div>
  <%end%>

  <div class="field">
  <%= f.label 'Title:' %>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <%= f.label 'Released:' %>
  <%= f.check_box :released %>
  </div>

  <div class="field">
  <%= f.label 'Release Year:' %>
  <%= f.number_field :release_year %>
  </div>

  <div class="field">
  <%= f.label 'Artist Name:' %>
  <%= f.text_field :artist_name %>
  </div>

  <div class="field">
  <%= f.label 'Genre:' %>
  <%= f.text_field :genre %>
  </div>

  <div class="actions">
  <%= f.submit %>

  <%= link_to 'Cancel Edit', @song %>

<% end %>
